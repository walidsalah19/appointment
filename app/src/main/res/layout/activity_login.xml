<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_access.login">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/imageView_view"
                android:layout_gravity="center"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"
                    android:scaleType="fitXY"
                    android:layout_gravity="center">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="تسجيل الدخول"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    >
                </TextView>
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/email_edittext"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edittext_shaps"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:hint=" البريد الالكتروني "
                    android:ems="10"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/email_password_text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:inputType="textPassword"
                    android:hint="كلمة المرور "
                    android:paddingStart="10dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/edittext_shaps"
                    android:padding="5dp"
                    android:drawableStart="@drawable/ic_baseline_lock_24"

                    android:ems="10"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    >

                    <TextView android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="إظهار كلمة المرور"
                        android:gravity="center|start"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="14sp">
                    </TextView>

                    <CheckBox android:layout_height="match_parent"
                        android:layout_width="50dp"
                        android:id="@+id/show_password_login"
                        android:layout_weight="1">
                    </CheckBox>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/login"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@color/color1"
                    android:text="تسجيل الدخول "/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/new_account"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text=" إنشاء حساب جديد ؟"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/forgit_password"
                    android:textColor="@color/black"
                    android:text="هل نسيت كلمه المرور؟"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>